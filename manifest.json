{
	"name": "Trello Scrum",
	"version": "1.0.1",
	"description": "Adds Scrum to your Trello",
	"content_scripts": [
		{
			"matches": ["https://trello.com/*"],
			"exclude_matches": ["https://trello.com/1/*"],
			"js": ["jquery-1.7.1.min.js", "client.js", "trelloscrum.js"],
			"css": ["trelloscrum.css"]
		}
	],
	"manifest_version" : 2,
    "icons": { "128": "trello-scrum-icon.png" },
    "web_accessible_resources": [
	    "images/storypoints-icon.png",
	    "images/points-done.png"
    ],
    "permissions": [
    	"webRequest", "tabs",
    	"https://trello.com/",
    	"https://api.trello.com/*"
  	]
}
